<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="vpiTabPageIndicatorStyle">@style/MyWidget.TabPageIndicator</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarSize">45dp</item>
    </style>

    <style name="MyWidget.TabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">13dip</item>
        <item name="android:paddingRight">13dip</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/MyTextAppearance.TabPageIndicator</item>
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:actionBarTabStyle">@style/Widget.Sherlock.ActionBar.TabView</item>
    </style>

    <style name="MyTextAppearance.TabPageIndicator" parent="Widget">
        <item name="android:textColor">@drawable/selector_tabtext</item>
    </style>

    <style name="Widget.Sherlock.ActionBar.TabView" parent="Widget">
        <item name="android:background">@drawable/tab_indicator</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
    </style>

    <style name="NormalTextView">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/textSize_normal</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="SmallTextView">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textSize">@dimen/textSize_small_2</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="SmallGreyTextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/textSize_small</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="SmallWhiteTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSize_smaller</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="BigWhiteTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSize_big</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="SuperSmallTextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/textSize_super_small</item>
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
